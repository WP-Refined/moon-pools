{
  "private": true,
  "scripts": {
    "dev": "npm run development",
    "development": "mix",
    "watch": "mix watch",
    "watch-poll": "mix watch -- --watch-options-poll=1000",
    "hot": "mix watch --hot",
    "prod": "npm run production",
    "production": "mix --production",
    "husky:install": "husky install",
    "lint": "eslint --ext .js,.ts,.tsx,.vue --ignore-path .eslintignore --fix resources/js",
    "format": "prettier . --write"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "prettier . --write",
      "npm run lint"
    ],
    "*.{scss}": [
      "prettier . --write"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^10.4.2",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-vue": "^8.5.0",
    "flatpickr": "^4.6.9",
    "husky": "^7.0.4",
    "laravel-mix": "^6.0.0-beta.17",
    "lint-staged": "^12.3.4",
    "postcss": "^8.1.14",
    "prettier": "^2.5.1",
    "resolve-url-loader": "^5.0.0",
    "sass": "^1.49.9",
    "sass-loader": "^12.6.0",
    "tailwindcss": "^3.0.23",
    "vue-loader": "^16.8.3",
    "webpack": "^5.23.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "balm-ui": "^9.42.2",
    "luxon": "^2.3.1",
    "vue": "^3.2.30"
  }
}
